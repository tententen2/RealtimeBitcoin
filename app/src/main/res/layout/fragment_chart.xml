<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.crop.jirawatpoo.bitcointickerrealtime.view.Pricenotchart.ChartFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="3"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:text="Sell"
                android:gravity="left"
                android:textSize="20sp"
                android:textColor="@android:color/holo_green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1400000"
                android:id="@+id/CurrentPrice"
                android:gravity="left"
                android:textSize="40sp"
                android:textColor="@android:color/holo_green_light"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="-3.3%"
                android:id="@+id/volume1"
                android:gravity="left"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:text="Last Trade"
                android:gravity="left"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1400000"
                android:id="@+id/CurrentPrice2"
                android:gravity="left"
                android:textSize="40sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="-3.3%"
                android:id="@+id/volume2"
                android:gravity="left"
                android:textSize="20sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:text="Buyer"
                android:gravity="left"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="1400000"
                android:id="@+id/CurrentPrice3"
                android:gravity="left"
                android:textSize="40sp"
                android:textColor="@android:color/holo_red_light"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="-3.3%"
                android:id="@+id/volume3"
                android:gravity="left"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <com.jjoe64.graphview.GraphView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/graph" />

</LinearLayout>
